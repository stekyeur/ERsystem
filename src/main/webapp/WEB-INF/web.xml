<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Acil Servis İş Yükü Planlama</display-name>

    <!-- Session timeout 30 dakika -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- Welcome files -->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
        <welcome-file>dashboard.jsp</welcome-file>
    </welcome-file-list>

    <!-- Login Servlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.hospital.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Logout Servlet -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.hospital.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- Dashboard Servlet -->
    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>com.hospital.servlet.DashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>

    <!-- İşlem Kayıt Servlet -->
    <servlet>
        <servlet-name>IslemKayitServlet</servlet-name>
        <servlet-class>com.hospital.servlet.IslemKayitServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IslemKayitServlet</servlet-name>
        <url-pattern>/islem-kayit</url-pattern>
    </servlet-mapping>

    <!-- İşlem Listele Servlet -->
    <servlet>
        <servlet-name>IslemListeleServlet</servlet-name>
        <servlet-class>com.hospital.servlet.IslemListeleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IslemListeleServlet</servlet-name>
        <url-pattern>/islem-listele</url-pattern>
    </servlet-mapping>

    <!-- Hemşire Servlet -->
    <servlet>
        <servlet-name>HemsireServlet</servlet-name>
        <servlet-class>com.hospital.servlet.HemsireServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HemsireServlet</servlet-name>
        <url-pattern>/hemsire</url-pattern>
    </servlet-mapping>

    <!-- Rapor Servlet -->
    <servlet>
        <servlet-name>RaporServlet</servlet-name>
        <servlet-class>com.hospital.servlet.RaporServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RaporServlet</servlet-name>
        <url-pattern>/rapor</url-pattern>
    </servlet-mapping>

    <!-- Security Constraint for Authentication -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Protected Area</web-resource-name>
            <url-pattern>/dashboard.jsp</url-pattern>
            <url-pattern>/islem/*</url-pattern>
            <url-pattern>/hemsire/*</url-pattern>
            <url-pattern>/rapor/*</url-pattern>
            <url-pattern>/dashboard</url-pattern>
        </web-resource-collection>
    </security-constraint>



    <!-- Error Pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/error/404.jsp</location>
    </error-page>

    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/error/500.jsp</location>
    </error-page>


    <!-- Filter for Character Encoding -->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>com.hospital.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>forceEncoding</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Authentication Filter -->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.hospital.filter.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/dashboard.jsp</url-pattern>
        <url-pattern>/islem/*</url-pattern>
        <url-pattern>/hemsire/*</url-pattern>
        <url-pattern>/rapor/*</url-pattern>
        <url-pattern>/dashboard</url-pattern>
    </filter-mapping>

    <security-role>
        <role-name>user</role-name>
    </security-role>

</web-app>